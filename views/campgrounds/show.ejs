<% include ../header %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead" style="color:azure;">GoCamping!</p>
      <div class="list-group">
        <li class="list-group-item active">Contact</li>
        <li class="list-group-item">Rules and Regulations</li>
        <li class="list-group-item">Other useful info</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= campground.image %>" alt="">
        <div class="caption-full">
          <h4 class="pull-right">$9.00/night</h4>
          <h4><a><%= campground.name %></a></h4>
          <p><%= campground.description %></p>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-success">Add new comment</a>
        </div>
        <hr>
        <% campground.comments.forEach(function(comment){ %>
          <p><strong><%= comment.author %></strong></p>
          <span class="pull-right">10 days ago</span>
          <p><%= comment.text %></p>
        <% }); %>
      </div>
    </div>
  </div>
</div>

