<%include ../header %>
  <div class=container>
    <div class="jumbotron">
      <div class="container">

        <h1>The campgrounds</h1>
        <p>Hand-piked Camp Sites from all over the world</p>
        <p>
          <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add new campground</a>
        </p>
      </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
      <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src="<%= campground.image %>" alt="">
              <div class="caption">
                <h4><%= campground.name %></h4>
              </div>
              <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
            </div>
          </div>
      <% }); %>
    </div>

  </div>

<% include ../footer %>
